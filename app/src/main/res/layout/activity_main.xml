<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nyc.c4q.techup.MainActivity"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="bottom">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#tech_up"
        android:gravity="end"
        android:textSize="56sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="An Android Development Resource"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="64dp">
        <Button
            android:id="@+id/button_example_apps_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Example apps"
            android:onClick="onButtonclick"/>
        <Button
            android:id="@+id/button_development_guides_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Development Guides"
            android:onClick="onButtonclick"/>

        <Button
            android:id="@+id/button_terminology_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terminology"
            android:onClick="onButtonclick"/>


    </LinearLayout>


</LinearLayout>
